    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://*:81"
      },
      "Https": {
        "Url": "https://*:8444"
      }
    }
  },
  "AllowedHosts": "*",
